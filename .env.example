# 学习平台环境变量配置模板
# 复制此文件为 .env 并填入实际值

# 应用配置
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# 数据库配置
# MongoDB连接字符串
MONGODB_URI=mongodb://localhost:27017/learning_platform

# 安全密钥配置
# JWT密钥 - 用于签名和验证JWT token
# 要求: 至少32个字符，包含大小写字母和数字，随机生成
# 生成命令: node -e "console.log(require('crypto').randomBytes(24).toString('base64').replace(/[^a-zA-Z0-9]/g, ''))"
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRE=2h
JWT_REFRESH_EXPIRE=7d

# Session密钥 - 用于session加密
# 要求: 至少32个字符，随机生成
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# 邮件配置（可选）
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 缓存配置（可选）
REDIS_URL=redis://localhost:6379

# 安全配置
BCRYPT_ROUNDS=12
API_RATE_LIMIT=100

# 生产环境建议
# 1. 使用强随机密钥
# 2. 启用HTTPS
# 3. 配置防火墙
# 4. 定期更新依赖